{
  "name": "cheshire-cat-ai",
  "publisher": "Cheshire-Cat-AI",
  "displayName": "Cheshire Cat AI",
  "description": "VSCode extension to communicate with the Cheshire Cat AI!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Machine Learning"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cheshire-cat-ai.helloWorld",
        "title": "CheshireCat helloWorld"
      },
      {
        "command": "cheshire-cat-ai.sendMessage",
        "title": "CheshireCat Message"
      },
      {
        "command": "cheshire-cat-ai.toSettings",
        "title": "CheshireCat Settings"
      },
      {
        "command": "cheshire-cat-ai.commentCode",
        "title": "CheshireCat: Comment code"
      }
    ],
    "walkthroughs": [
      {
        "id": "firstInstall",
        "title": "Hello, Dear!",
        "description": "First installation settings",
        "icon": "assets/chechire-cat-ai.svg",
        "steps": [
          {
            "id": "setLLM",
            "title": "Choose a Langue Model",
            "description": "Configure a Large Language Model.\n[Configure](command:cheshire-cat-ai.toSettings)",
            "media": { "markdown": "assets/installation.md"},
            "completionEvents": ["onCommand:cheshire-cat-ai.toSettings"]
          }
        ]
      }
    ],
    "configuration": {
      "title": "CheshireCat",
      "properties": {
        "CheshireCat.BaseUrl": {
          "type": "string",
          "default": "localhost",
          "description": "Base URL for WebSocket and endpoints connection"
        },
        "CheshireCat.Port": {
          "type": "integer",
          "default": 1865,
          "description": "Connection port for WebSocket and endpoints"
        },
        "CheshireCat.ConfigureLanguageModel": {
          "type": "string",
          "default": "ChatGPT",
          "enum": ["ChatGPT", "HuggingFace Hub"],
          "description": "Choose and configure your favourite Large Language Model"
        },
        "CheshireCat.ApiKey": {
          "type": "string",
          "default": null,
          "description": "Personal API key on Language Model vendor's account"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "cheshire-cat-ai.commentCode",
          "group": "CheshireCat"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.3.2",
    "@types/vscode": "^1.79.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vscode/test-electron": "^2.3.3",
    "eslint": "^8.43.0",
    "glob": "^10.3.1",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "ccat-api": "^0.4.1"
  }
}
