{
  "name": "cheshire-cat-ai",
  "publisher": "CheshireCatAI",
  "displayName": "Cheshire Cat AI",
  "icon": "assets/icon.png",
  "description": "VSCode extension to communicate with the Cheshire Cat AI!",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Machine Learning"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cheshire-cat-ai/vscode-extension.git"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cheshire-cat-ai.toSettings",
        "title": "Cheshire Cat: Go to Settings"
      },
      {
        "command": "cheshire-cat-ai.commentCode",
        "title": "Cheshire Cat AI: Comment Code"
      },
      {
        "command": "cheshire-cat-ai.restartSettings",
        "title": "Cheshire Cat AI: Restart Settings"
      },
      {
        "command": "cheshire-cat-ai.fetchPlugins",
        "title": "Cheshire Cat: Fetch Plugin"
      },
      {
        "command": "cheshire-cat-ai.makeFunction",
        "title": "Cheshire Cat AI: Function from comment"
      }
    ],
    "walkthroughs": [
      {
        "id": "firstInstall",
        "title": "Hello, Dear!",
        "description": "First installation settings",
        "icon": "assets/chechire-cat-ai.png",
        "steps": [
          {
            "id": "setLLM",
            "title": "Choose a Langue Model",
            "description": "Configure a Large Language Model.\n[Configure](command:cheshire-cat-ai.toSettings)",
            "media": {
              "markdown": "assets/step1.md"
            },
            "completionEvents": [
              "onCommand:cheshire-cat-ai.toSettings"
            ]
          },
          {
            "id": "downloadPlugin",
            "title": "Download the Cat plugin",
            "description": "Download and install the Cat Code Commenter plugin.\n[Download](https://github.com/nicola-corbellini/cat_code_commenter/archive/refs/heads/main.zip)",
            "media": {
              "markdown": "assets/step2.md"
            },
            "completionEvents": [
              "onCommand:cheshire-cat-ai.fetchPlugins"
            ]
          }
        ]
      }
    ],
    "configuration": {
      "title": "Cheshire Cat AI",
      "properties": {
        "CheshireCatAI.BaseUrl": {
          "type": "string",
          "default": "localhost",
          "description": "Base URL for WebSocket and endpoints connection"
        },
        "CheshireCatAI.Port": {
          "type": "integer",
          "default": 1865,
          "description": "Connection port for WebSocket and endpoints"
        },
        "CheshireCatAI.WebsocketPath": {
          "type": "string",
          "default": "ws",
          "description": "Websocket path to which connect"
        },
        "CheshireCatAI.LanguageModel": {
          "type": "string",
          "default": "ChatGPT | gpt-3.5-turbo",
          "enum": [
            "ChatGPT | gpt-3.5-turbo",
            "GPT-3 | text-davinci-003",
            "Cohere | command",
            "HuggingFace Hub | falcon-7b-instruct",
            "HuggingFace Hub | starcoder"
          ],
          "description": "Choose and configure your favourite Large Language Model"
        },
        "CheshireCatAI.ApiKey": {
          "type": "string",
          "default": null,
          "description": "Personal API key on Language Model vendor's account"
        },
        "CheshireCatAI.AuthKey": {
          "type": "string",
          "default": null,
          "description": "(Optional) Personal key to authenticate the Cheshire Cat endpoints"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "cheshire-cat-ai.commentCode",
          "group": "CheshireCat"
        },
        {
          "command": "cheshire-cat-ai.makeFunction",
          "group": "CheshireCat"
        }
      ],
      "commandPalette": [
        {
          "command": "cheshire-cat-ai.toSettings",
          "when": "false"
        },
        {
          "command": "cheshire-cat-ai.fetchPlugins",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.4.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vscode/test-electron": "^2.3.3",
    "esbuild": "^0.18.17",
    "eslint": "^8.46.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "ccat-api": "^0.6.1",
    "generator-code": "^1.7.7"
  }
}
